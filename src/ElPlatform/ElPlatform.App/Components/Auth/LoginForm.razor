@namespace ElPlatform.App.Components
<EditForm Model="_model" OnValidSubmit="LoginUserAsync">
    <DataAnnotationsValidator />
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Welcome in ElPlatform</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" Class="mt-3" HelperText="Requierd"
                          @bind-Value="_model.Email" />
            <MudTextField Label="Password" HelperText="Choose a strong password" Class="mt-3"
                          @bind-Value="_model.Password" InputType="InputType.Password" />
            <ValidationSummary />
            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="my-2" Variant="Variant.Filled">@_errorMessage</MudAlert>
            }
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Disabled="_isBusy">Register</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Class="ml-1" Disabled="_isBusy" Color="Color.Primary">Login</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>
