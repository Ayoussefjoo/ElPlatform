@namespace ElPlatform.App.Components
@if (_isBusy)
{
<MudGrid Spacing="2">
    <MudItem sm="12" md="6" lg="4">
        <MudCard>
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" />
            <MudCardContent>
                <MudSkeleton Width="30%" Height="42px;" />
                <MudSkeleton Width="80%" />
                <MudSkeleton Width="100%" />
            </MudCardContent>
            <MudCardActions>
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
                <MudSkeleton Width="105px" Height="40px" Class="ml-3" />
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem sm="12" md="6" lg="4">
        <MudCard>
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" />
            <MudCardContent>
                <MudSkeleton Width="30%" Height="42px;" />
                <MudSkeleton Width="80%" />
                <MudSkeleton Width="100%" />
            </MudCardContent>
            <MudCardActions>
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
                <MudSkeleton Width="105px" Height="40px" Class="ml-3" />
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem sm="12" md="6" lg="4">
        <MudCard>
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" />
            <MudCardContent>
                <MudSkeleton Width="30%" Height="42px;" />
                <MudSkeleton Width="80%" />
                <MudSkeleton Width="100%" />
            </MudCardContent>
            <MudCardActions>
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
                <MudSkeleton Width="105px" Height="40px" Class="ml-3" />
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
}
else
{
    <MudGrid Spacing="2">
        @if (_mediaItems != null && _mediaItems.Records != null)
        {
            foreach (var mediaItem in _mediaItems.Records)
            {
                <MudItem sm="12" md="6" lg="3">
                    <MediaItemCard MediaItem="mediaItem" />
                </MudItem>
            }
        }
    </MudGrid>
}
